{
  "name": "EZID_UI_library",
  "version": "1.0.0",
  "description": "Gulp build tool for EZID UI library",
  "main": "index.html",
  "scripts": {
    "stylelintfix": "stylelint \"dev/scss/*\" --fix",
    "stylelintfix_legacy": "stylelint \"dev/legacy-scss/*\" --fix"
  },
  "author": "Joel",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "browsersync-ssi": "^0.2.4",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-cache": "^1.1.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-jshint": "^2.1.0",
    "gulp-lb-include": "^0.3.1",
    "gulp-modernizr": "^3.4.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^4.0.1",
    "jshint": "^2.11.0",
    "postcss-assets": "^5.0.0",
    "run-sequence": "^2.2.1",
    "stylelint": "^13.2.1",
    "stylelint-config-property-sort-order-smacss": "^6.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.16.0"
  },
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": [
      "stylelint-config-recommended-scss",
      "stylelint-config-property-sort-order-smacss"
    ],
    "rules": {
      "max-nesting-depth": [
        4,
        {
          "ignore": [
            "blockless-at-rules",
            "pseudo-classes"
          ]
        }
      ],
      "no-descending-specificity": null
    }
  },
  "dependencies": {
    "node-sass": "^4.14.1"
  }
}
