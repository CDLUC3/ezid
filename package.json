{
  "name": "ezid-ui-toolkit",
  "version": "1.0.0",
  "description": "UI toolkit for EZID UI library",
  "main": "index.html",
  "scripts": {
    "stylelintfix": "stylelint \"dev/scss/*\" --fix",
    "stylelintfix_legacy": "stylelint \"dev/legacy-scss/*\" --fix",
    "ui:watch": "gulp",
    "ui:build": "gulp build"
  },
  "author": "CDLUC3",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "browsersync-ssi": "^0.2.4",
    "del": "^6.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-cache": "^1.1.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-jshint": "^2.1.0",
    "gulp-lb-include": "^0.3.1",
    "gulp-modernizr": "^4.0.4",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^5.0.0",
    "jshint": "^2.13.6",
    "node-sass": "^9.0.0",
    "postcss-assets": "^6.0.0",
    "run-sequence": "^2.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-property-sort-order-smacss": "^7.1.0",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-scss": "^3.21.0"
  },
  "stylelint": {
    "defaultSeverity": "warning",
    "extends": [
      "stylelint-config-recommended-scss",
      "stylelint-config-property-sort-order-smacss"
    ],
    "rules": {
      "max-nesting-depth": [
        4,
        {
          "ignore": [
            "blockless-at-rules",
            "pseudo-classes"
          ]
        }
      ],
      "no-descending-specificity": null
    }
  }
}
