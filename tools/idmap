#! /bin/bash

# Extracts all agent identifiers from an EZID dump file
# (gzip-compressed or not) and prints a mapping of agent identifiers
# to local names.
#
# Greg Janee <gjanee@ucop.edu>
# September 2012

tooldir=`dirname $0`

if [ $# -eq 0 ]; then
  cat=cat
  infile=
elif [ $# -eq 1 ]; then
  if [[ $1 =~ .*\.gz$ ]]; then
    cat="gunzip -c"
  else
    cat=cat
  fi
  infile=$1
else
  echo "usage: $0 [dumpfile]" >&2
  exit 1
fi

# The use of fgrep below is purely for performance.  The second awk
# script is to qualify the identifiers, which is necessary if reading
# from a raw dump.

$cat $infile |\
  fgrep _ezid_role |\
  $tooldir/select _fields contains _ezid_role |\
  $tooldir/project -d -s \| _id ldap.gid ldap.uid _ezid_role |\
  awk -F \| '{ print $1, ($4 == "user"? $3 : $2), "(" $4 ")" }' |\
  awk '{ if (substr($0, 1, 5) != "ark:/") $0 = "ark:/" $0; print $0 }' |\
  sort -k 2,2 -k 3,3r
